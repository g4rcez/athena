{
	"compilerOptions": {
		"module": "umd",
		"esModuleInterop": true,
		"target": "es6",
		"lib": ["es2018", "es7"],
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["src/**/*"]
}
