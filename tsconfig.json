{
	"compilerOptions": {
		"esModuleInterop": true,
		"target": "es6",
		"lib": [
			"DOM",
			"ESNext"
		],
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "dist",
		"skipLibCheck": true,
		"baseUrl": ".",
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"strict": true,
		"downlevelIteration": true,
		"importHelpers": true,
		"strictNullChecks": true,
		"skipDefaultLibCheck": true,
		"strictFunctionTypes": true,
		"noImplicitReturns": true
	},
	"include": [
		"src/**/*"
	]
}